@model List<Library.Models.Book>;
@using System.Collections.Generic;
@using System.Linq;
@{
    List<Checkout> bb = ViewBag.BookBag as List<Checkout>;
}

<h1>Book Inventory</h1>
<h4>Add a new book @Html.ActionLink("here","Create")</h4>

@if(Model.Count == 0)
{
    <h3>There are no books in the inventory</h3>
    
}
else
{
    <div class="row bookHeader">
        <div class="col-md-2">
            In BookBag
        </div>
        <div class="col-md-2">
            Title
        </div>
        <div class="col-md-2">
            Author(s)
        </div>
        <div class="col-md-2">
            Genre
        </div>
        <div class="col-md-2">
            Publish Year
        </div>
        <div class="col-md-2">
            Format
        </div>
        <div class="col-md-2">
            Actions
        </div>
    </div>
    @foreach(Book book in Model)
    {
        <div class="row">
        <div class="col-md-2">
            @if(@bb.FirstOrDefault(checkout => checkout.Copy.Book.BookId == book.BookId).ToBeCheckedOut)
            {
                <input type="checkbox" value="true">
            }
            else
            {
                <input type="checkbox" value="false">
            }
        </div>
        <div class="col-md-2">
            @book.Title
        </div>
        <div class="col-md-2">
            @foreach (var author in @book.Authors)
            {
                @author.Author.WholeName<br>
            }
        </div>
        <div class="col-md-2">
             @book.Genre
        </div>
        <div class="col-md-2">
             @book.PublishYear
        </div>
        <div class="col-md-2">
             @book.Format
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Edit", "Edit", new {id = @book.BookId }) <br>
            @Html.ActionLink("Remove", "Delete", new {id = @book.BookId }) <br>
            @Html.ActionLink("Details", "Details", new {id = @book.BookId })
        </div>
    </div>
    }
}